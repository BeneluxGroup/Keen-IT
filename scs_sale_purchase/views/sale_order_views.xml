<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit sale order form view -->
    <record id="view_sale_purchase_form_inherit_smart" model="ir.ui.view">
        <field name="name">view.sale.purchase.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
            </div>
            <xpath expr="//button[@name='action_cancel']" position='after'>
                <button
                    class="oe_highlight"
                    string="Create Purchase order"
                    type="action"
                    name="%(scs_sale_purchase.action_view_wiz_sale_purchase)d"
                    groups="purchase.group_purchase_user"
                />
            </xpath>
        </field>
    </record>
    <record id="sale_order_inherited_form_smart_button" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.purchase.button</field>
        <field name="model">sale.order</field>
        <field
            name="inherit_id"
            ref="sale_purchase.sale_order_inherited_form_purchase"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='action_view_purchase_orders']"
                position="attributes"
            >
            <attribute name="context">{'default_sale_order_id':id}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
