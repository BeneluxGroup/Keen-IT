<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="web_custom_frontend_navbar" name="Keen IT Navbar" inherit_id="website.layout">
        <xpath expr="//header" position="inside">
            <!-- Add your custom HTML for the frontend desktop navbar -->
            <nav>
                <!-- Desktop navbar -->
                <div class="keen-navbar-desktop">
                    <!-- Logo -->
                    <a href="/">
                        <img t-if="website.logo" t-att-src="'data:image/png;base64,'+website.logo" alt="Keen IT Logo" />
                    </a>
                    <!-- Add dynamic rendering of main menu links -->
                    <t t-foreach="menu_main.get_main_menu()" t-as="menu" t-key="menu.id">
                        <a href="{{ menu.url }}" t-attf-title="{{ menu.name }}">
                            <t t-esc="menu.name" />
                        </a>
                    </t>
                </div>
                <!-- Mobile navbar -->
                <div class="keen-navbar-mobile">

                </div>
            </nav>
        </xpath>
    </template>
</odoo>
