<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="header" model="ir.ui.view">
       <field name="name">Keen Header</field>
       <field name="type">qweb</field>
       <field name="key">website_keen.header</field>
       <field name="inherit_id" ref="website.layout"/>
       <field name="mode">extension</field>
       <field name="arch" type="xml">
          <xpath expr="//header//nav" position="replace">
             <header class="keen-header">
                    <nav class="container">
                    <!-- Nav Desktop -->
                        <div class="keen-navbar-desktop row align-items-center justify-content-between">
                            <div class="col-auto keen-navbar-logo">
                                <a href="/">
                                    <img class="img-fit" src="/website_keen/static/src/img/base/keen-rgb.svg" alt="Keen IT Logo"/>
                                </a>
                            </div>
                            <div class="col-auto d-flex flex-row align-items-center justify-content-center keen-navbar-menu d-flex">
                                <ul class="d-flex flex-row list-unstyled justify-stretch">
                                   <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                       <t t-call="website.submenu">
                                           <t t-set="item_class" t-valuef="nav-item"/>
                                           <t t-set="link_class" t-valuef="nav-link"/>
                                       </t>
                                   </t>
                                    <t t-call="portal.placeholder_user_sign_in">
                                       <t t-set="_item_class" t-valuef="nav-item"/>
                                       <t t-set="_link_class" t-valuef="nav-link"/>
                                    </t>
                                    <t t-call="portal.user_dropdown">
                                       <t t-set="_user_name" t-value="true"/>
                                       <t t-set="_icon" t-value="false"/>
                                       <t t-set="_avatar" t-value="false"/>
                                       <t t-set="_item_class" t-valuef="nav-item dropdown"/>
                                       <t t-set="_link_class" t-valuef="nav-link"/>
                                       <t t-set="_dropdown_menu_class" t-valuef="..."/>
                                    </t>
                                </ul>
                            </div>
                            <div class="col-auto">

                            </div>
                        </div>
                    </nav>
                </header>
          </xpath>
       </field>
    </record>

